@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}



<div class="row mt-3">
    <div class="col-md-7 offset-2">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h3>@ViewData["Title"]</h3>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Input.UserName" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Input.UserName" class="form-control" />
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Input.FullName" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Input.FullName" class="form-control" />
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Input.PhoneNumber" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Input.Address" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Input.Address" class="form-control" />
                    <span asp-validation-for="Input.Address" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Input.Email" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Input.Password" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Input.ConfirmPassword" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
